<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    android:gravity="bottom"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/fullCalcText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/lightGray"
        android:paddingTop="55dp"
        android:paddingEnd="12dp"
        android:textSize="45sp"
        android:textAlignment="viewEnd"
        />

    <TextView
        android:id="@+id/calcText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/white"
        android:paddingTop="55dp"
        android:paddingEnd="12dp"
        android:textSize="65sp"
        android:textAlignment="viewEnd"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btnClear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="C"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_lightgray"
            />

        <Button
            android:id="@+id/btnPlusMinus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="±"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_lightgray"
            />

        <Button
            android:id="@+id/btnMod"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="%"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_lightgray"
            android:onClick="onOperator"
            />

        <Button
            android:id="@+id/btnDiv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="÷"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_orange"
            android:onClick="onOperator"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btnSeven"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="7"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_darkgray"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/btnEight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="8"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_darkgray"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/btnNine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="9"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_darkgray"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/btnMul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="×"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_orange"
            android:onClick="onOperator"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btnFour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="4"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_darkgray"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/btnFive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="5"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_darkgray"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/btnSix"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="6"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_darkgray"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/btnSub"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="-"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_orange"
            android:onClick="onOperator"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:context=".MainActivity">

        <Button
            android:id="@+id/btnOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="1"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_darkgray"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/btnTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="2"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_darkgray"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/btnThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="3"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_darkgray"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="+"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_orange"
            android:onClick="onOperator"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        tools:context=".MainActivity">


        <Button
            android:id="@+id/btnZero"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="0"
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/oval_button_darkgray"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/btnDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="."
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_darkgray"
            android:onClick="onDigit"
            />

        <Button
            android:id="@+id/btnEquals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="="
            android:textSize="45sp"
            app:backgroundTint="@null"
            android:background="@drawable/round_button_orange"
            />

    </LinearLayout>



</LinearLayout>

